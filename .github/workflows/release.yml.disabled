name: Release

on:
  push:
    tags:
      - 'v*' # Сработает при пуше тега, например v1.0.0

permissions:
  contents: write # Критически важно для создания релиза и загрузки файлов

jobs:
  release:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4 # Обновил до актуальной версии v4

      - name: Set up Python
        uses: actions/setup-python@v5 # Обновил до актуальной версии v5
        with:
          python-version: '3.11'

      - name: Install build tools
        run: |
          python -m pip install --upgrade pip
          pip install setuptools wheel twine build

      - name: Build package
        run: |
          # Современный и надежный способ сборки (замена setup.py)
          python -m build 

      - name: Create Release
        uses: softprops/action-gh-release@v2 # Обновил до v2
        with:
          files: |
            dist/*
          generate_release_notes: true
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
